{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES5",
        "outDir": "./dist",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "lib": ["ES2015", "DOM", "DOM.Iterable"],
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}
